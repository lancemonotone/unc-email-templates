<mjml>
  <mj-head>
    <mj-title>Around UNC - University of Northern Colorado</mj-title>
    <mj-include path="./assets/styles.css" type="css" />
    <mj-include path="./assets/styles.mjml" />
  </mj-head>

  <mj-body>
    <!-- Section 1: Header/Logo Section -->
    <mj-section padding="0">
      <mj-include path="./partials/headers/header-around-unc.mjml" />
      <!-- Navigation Bar Section -->
      <mj-include path="../components/component-navigation-bar-gold.mjml" />
    </mj-section>

    <!-- Section 2: Featured Story/Events Section inside Two Column Sidebar -->
    <mj-section padding="0" css-class="light-section">
      <mj-column width="100%">
        <mj-raw><a id="events"></a></mj-raw>
      </mj-column>
      <mj-include path="./partials/blocks/block-two-column-sidebar.mjml" />
    </mj-section>

    <!-- Section 3: Stories Section -->
    <mj-section padding="0" css-class="light-section">
      <mj-include path="./partials/blocks/block-stories.mjml" />
    </mj-section>

    <!-- Section 4: UNC in Pictures Section -->
    <mj-section padding="0" padding-top="20px" css-class="light-section">
      <mj-column width="100%">
        <mj-raw><a id="pictures"></a></mj-raw>
      </mj-column>
      <mj-include path="./partials/blocks/block-in-pictures.mjml" />
    </mj-section>

    <!-- Section 5: Faculty and Staff Section -->
    <mj-section padding="0" css-class="light-section">
      <mj-column width="100%">
        <mj-raw><a id="students"></a></mj-raw>
      </mj-column>
      <mj-include path="./partials/blocks/block-students-faculty-staff.mjml" />
    </mj-section>

    <!-- Section 6: TRUE NORTH Section -->
    <mj-section padding="0" css-class="light-section">
      <mj-include path="./partials/blocks/block-true-north.mjml" />
    </mj-section>

    <!-- Section 7: UNC in the News Section -->
    <mj-section padding="0" css-class="light-section">
      <mj-column width="100%">
        <mj-raw><a id="news"></a></mj-raw>
      </mj-column>
      <mj-include path="./partials/blocks/block-in-the-news.mjml" />
    </mj-section>

    <!-- Social Media Footer -->
    <mj-section padding="0">
      <!-- Section 8: Footer Section -->
      <mj-include path="./partials/footers/social/footer-social-32.mjml" />
    </mj-section>

    <mj-section padding="0">
      <!-- Contact Footer -->
      <mj-include path="./partials/footers/footer-primary-bear-left.mjml" />
    </mj-section>
  </mj-body>
</mjml>
