<mj-font
  name="Arvo"
  href="https://fonts.googleapis.com/css2?family=Arvo:wght@400;700" />
<mj-font
  name="Roboto"
  href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700" />
<mj-attributes>
  <!-- Default body font stack - Ringside first -->
  <mj-all font-family="Ringside, Roboto, Tahoma, Arial, sans-serif" />
  <mj-text
    font-size="14px"
    color="#000000"
    line-height="1.5"
    padding="0"
    css-class="dark-mode-text" />
  <!-- Header styles - Questa Slab first -->
  <mj-class
    name="h1"
    font-family="'Questa Slab', Arvo, Rockwell, Verdana, Arial, sans-serif"
    font-size="32px"
    font-weight="700"
    padding="0"
    color="#013C65" />
  <mj-class
    name="h2"
    font-family="'Questa Slab', Arvo, Rockwell, Verdana, Arial, sans-serif"
    font-size="24px"
    font-weight="700"
    padding="0"
    color="#013c65"
    css-class="dark-mode-text mobile-center" />
  <mj-class
    name="h3"
    font-family="'Questa Slab', Arvo, Rockwell, Verdana, Arial, sans-serif"
    font-size="18px"
    font-weight="700"
    padding="0"
    color="#013c65"
    css-class="dark-mode-text" />
  <mj-class
    name="h4"
    font-family="'Questa Slab', Arvo, Rockwell, Verdana, Arial, sans-serif"
    font-size="16px"
    font-weight="700"
    padding="0"
    color="#013c65"
    css-class="dark-mode-text" />
  <!-- Special highlight text - Eds Market first -->
  <mj-class
    name="highlight"
    font-size="32px"
    padding="0"
    align="center"
    font-family="'Eds Market', 'Zeija Pro', 'Bradley Hand', 'Apple Chancery', 'URW Chancery L', 'Dancing Script', cursive, sans-serif" />

  <!-- Button styles -->
  <mj-class
    name="button-primary"
    background-color="#013c65"
    color="#ffffff"
    font-weight="bold"
    border-radius="4px"
    padding="10px 20px"
    css-class="button-primary" />

  <mj-class
    name="button-secondary"
    background-color="#f6b000"
    font-weight="bold"
    color="#ffffff"
    border-radius="4px"
    padding="10px 20px"
    css-class="button-secondary" />
</mj-attributes>
<mj-raw>
  <meta name="color-scheme" content="light dark" />
  <meta name="supported-color-schemes" content="light dark" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
