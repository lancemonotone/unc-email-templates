<!-- Primary Footer with Bear Head Left -->
<mj-section
  background-color="#013c65"
  padding="20px"
  css-class="blue-section mobile-stack">
  <!--[if gte mso 9]>
    <v:background xmlns:v="urn:schemas-microsoft-com:vml" fill="t">
      <v:fill type="solid" color="#013c65" />
    </v:background>
  <![endif]-->
  <!--[if mso]>
  <table role="presentation" border="0" cellpadding="0" cellspacing="0" width="100%" style="background-color: #013c65; border-collapse: collapse; mso-table-lspace: 0pt; mso-table-rspace: 0pt;">
  <tr>
  <td style="padding: 20px; background-color: #013c65; font-size: 0; line-height: 0;">
  <![endif]-->
  <mj-column
    width="25%"
    vertical-align="middle"
    css-class="mobile-stack-column"
    padding-bottom="20px">
    <mj-image
      css-class="mobile-center"
      src="https://ncd.test.technolutions.net/www/images/unc_brdmk_clr.png"
      alt="UNC Bear Head"
      width="60px"
      align="left"
      href="https://unco.edu"
      padding="0" />
  </mj-column>

  <mj-column
    width="75%"
    vertical-align="middle"
    css-class="mobile-stack-column">
    <!-- Row 1: Name -->
    <mj-text
      css-class="mobile-center white-text"
      font-size="12px"
      align="right"
      padding-bottom="5px"
      padding-top="0"
      color="#ffffff">
      Name
    </mj-text>

    <!-- Row 2: Email | Phone -->
    <mj-text
      css-class="mobile-center white-text"
      font-size="12px"
      align="right"
      padding-bottom="5px"
      padding-top="0"
      color="#ffffff">
      <a
        href="mailto:email@unco.edu"
        style="color: #ffffff; text-decoration: underline"
        >Email</a
      >
      | Phone
    </mj-text>

    <!-- Row 3: Address -->
    <mj-text
      css-class="mobile-center white-text"
      font-size="12px"
      align="right"
      padding-bottom="5px"
      padding-top="0"
      color="#ffffff">
      Address
    </mj-text>
  </mj-column>
  <!--[if mso]>
  </td>
  </tr>
  </table>
  <![endif]-->
</mj-section>

