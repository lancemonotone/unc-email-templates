<!-- Grid Image Block -->
<mj-column
  padding="0"
  css-class="block-container light-section dark-mode-section">
  <!-- Header Section with Gradient Background -->
  <mj-section padding="0">
    <!--[if gte mso 9]>
      <v:background xmlns:v="urn:schemas-microsoft-com:vml" fill="t">
        <v:fill type="gradient" color="#003366" color2="#007dba" angle="270" />
      </v:background>
    <![endif]-->
    <mj-text
      background-color="#013c65"
      mj-class="highlight"
      color="#FFB71B">
      <div
        style="background: linear-gradient(180deg, #003366 0%, #007dba 100%)">
          <img
            src="https://ncd.test.technolutions.net/www/images/unc_mono_wht.png"
            alt="UNC"
            width="100"
            style="vertical-align: middle" />
          <span style="vertical-align: middle"> in Pictures</span>
      </div>
    </mj-text>

    <!-- Subtitle -->
    <mj-section
      padding="0"
      background-color="#EBEBEB"
      css-class="grey-section subtitle-section dark-mode-section dark-mode-text">
      <mj-text align="center" mj-class="h5" css-class="" padding="15px 10px">
        <p style="margin: 0">The people, places and events at UNC</p>
      </mj-text>
    </mj-section>
  </mj-section>

  <!-- Image Grid - Row 1 -->
  <mj-section padding="0">
    <!-- Left Image -->
    <mj-column width="49%" padding="20px" css-class="mobile-stack-column">
      <mj-include path="../components/component-image-content-center.mjml" />
      <mj-include path="../components/component-image-caption.mjml" />
    </mj-column>

    <!-- Right Image -->
    <mj-column width="49%" padding="20px" css-class="mobile-stack-column">
      <mj-include path="../components/component-image-content-center.mjml" />
      <mj-include path="../components/component-image-caption.mjml" />
    </mj-column>
  </mj-section>

  <!-- Image Grid - Row 2 (Additional rows can be added following this pattern) -->
  <mj-section padding="0">
    <!-- Left Image -->
    <mj-column width="49%" padding="20px" css-class="mobile-stack-column">
      <mj-include path="../components/component-image-content-center.mjml" />
      <mj-include path="../components/component-image-caption.mjml" />
      </mj-text>
    </mj-column>

    <!-- Right Image -->
    <mj-column width="49%" padding="20px" css-class="mobile-stack-column">
      <mj-include path="../components/component-image-content-center.mjml" />
      <mj-include path="../components/component-image-caption.mjml" />
    </mj-column>
  </mj-section>
</mj-column>
