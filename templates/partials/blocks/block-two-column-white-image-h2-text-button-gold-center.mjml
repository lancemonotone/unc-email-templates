<!-- Body Content Block with Left Image, Right Content (White Background) -->
<mj-section
  padding="20px"
  padding-left="40px"
  padding-right="40px"
  css-class="block-container light-section">
  <!-- Left Column - Image -->
  <mj-column
    width="50%"
    padding="10px"
    padding-left="0"
    vertical-align="top"
    css-class="mobile-stack-column">
    <mj-include path="../components/images/component-image-content-left.mjml" />
  </mj-column>

  <!-- Right Column - Content -->
  <mj-column
    width="50%"
    padding="10px"
    padding-right="0"
    vertical-align="top"
    css-class="mobile-stack-column">
    <!-- H2 Header -->
    <mj-include path="../components/text/component-h2.mjml" />

    <!-- Body Text -->
    <mj-include path="../components/text/component-text-no-bullets.mjml" />

    <!-- CTA Button -->
  </mj-column>

  <mj-column
    width="100%"
    padding="0"
    vertical-align="top"
    css-class="mobile-stack-column padding-sides">
    <mj-include path="../components/buttons/component-button-gold-center.mjml" />
  </mj-column>
</mj-section>
