<!-- Body Content Block with Left Image, Right Content (White Background) -->
<mj-section
  padding="0"
  padding-left="40px"
  padding-right="40px"
  css-class="block-container light-section">
  <!-- Left Column - Image -->
  <mj-column
    width="45%"
    padding="20px"
    padding-left="0"
    vertical-align="top"
    css-class="mobile-stack-column">
    <mj-include path="../components/component-image-content-left.mjml" />
  </mj-column>

  <!-- Right Column - Content -->
  <mj-column
    width="55%"
    padding="20px"
    padding-right="0"
    vertical-align="top"
    css-class="mobile-stack-column">
    <!-- H2 Header -->
    <mj-include path="../components/component-h2.mjml" />

    <!-- Body Text -->
    <mj-include path="../components/component-text-no-bullets.mjml" />

    <!-- CTA Button -->
    <mj-include path="../components/component-button-blue-left.mjml" />
  </mj-column>
</mj-section>
