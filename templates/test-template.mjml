<?mjml>
<mjml>
  <mj-head>
    <mj-title>UNC Email Test Template</mj-title>
    <mj-font
      name="Arvo"
      href="https://fonts.googleapis.com/css2?family=Arvo:wght@400;700" />
    <mj-attributes>
      <mj-all font-family="Arial, serif" />
      <mj-text font-size="16px" color="#000000" line-height="1.5" />
    </mj-attributes>
    <mj-raw>
      <meta name="color-scheme" content="light dark" />
      <meta name="supported-color-schemes" content="light dark" />
    </mj-raw>
    <mj-style>
      /* Default (Light Mode) */ .dark-img { display: none; } .light-img {
      display: block; } @media (prefers-color-scheme: dark) { /* Page Background
      */ body { background-color: #1a1a1a !important; }
      div[style*="background-color:#f7f7f7"] { background-color: #1a1a1a
      !important; } /* Force colors */ .force-dark, .force-dark table,
      table.force-dark { background: #013c65 !important; background-color:
      #013c65 !important; color: #ffffff !important; } /* Sections */
      .dark-mode-section { background-color: #333333 !important; } /* Text */
      .dark-mode-text, .dark-mode-text * { color: #ffffff !important; } /*
      Images */ .light-img { display: none !important; } .dark-img { display:
      block !important; } } /* Outlook Dark Mode */ [data-ogsc] body {
      background-color: #1a1a1a !important; } [data-ogsc]
      div[style*="background-color:#f7f7f7"] { background-color: #1a1a1a
      !important; } [data-ogsc] .force-dark, [data-ogsc] .force-dark table,
      [data-ogsc] table.force-dark { background: #013c65 !important;
      background-color: #013c65 !important; color: #ffffff !important; }
      [data-ogsc] .dark-mode-section { background-color: #333333 !important; }
      [data-ogsc] .dark-mode-text, [data-ogsc] .dark-mode-text * { color:
      #ffffff !important; } [data-ogsc] .light-img { display: none !important; }
      [data-ogsc] .dark-img { display: block !important; }
    </mj-style>
  </mj-head>
  <mj-body background-color="#f7f7f7" width="1080px">
    <!-- Headers -->
    <mj-include path="./partials/headers.mjml" />
    <!--end Headers -->

    <!-- Static Content -->
    <mj-section background-color="#ffffff" padding="20px">
      <mj-column>
        <mj-text
          font-size="24px"
          color="#013c65"
          font-family="Arvo, Arial, sans-serif"
          padding-bottom="20px">
          {{ email_title | default: 'Welcome to UNC' }}
        </mj-text>
        <mj-text>
          {{ email_content_1 | default: 'Lorem ipsum dolor sit amet, consectetur
          adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore
          magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation
          ullamco laboris nisi ut aliquip ex ea commodo consequat.' }}
        </mj-text>
        <mj-text>
          {{ email_content_2 | default: 'Duis aute irure dolor in reprehenderit
          in voluptate velit esse cillum dolore eu fugiat nulla pariatur.
          Excepteur sint occaecat cupidatat non proident, sunt in culpa qui
          officia deserunt mollit anim id est laborum.' }}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Footer Selection -->
    <mj-raw> {% if footer_style == 'compact' %} </mj-raw>
    <mj-include path="./partials/footers/footer-compact.mjml" />
    <mj-raw> {% elsif footer_style == 'contact' %} </mj-raw>
    <mj-include path="./partials/footers/footer-contact.mjml" />
    <mj-raw> {% elsif footer_style == 'minimal' %} </mj-raw>
    <mj-include path="./partials/footers/footer-minimal.mjml" />
    <mj-raw> {% elsif footer_style == 'primary-blue' %} </mj-raw>
    <mj-include path="./partials/footers/footer-primary-blue.mjml" />
    <mj-raw> {% elsif footer_style == 'primary' %} </mj-raw>
    <mj-include path="./partials/footers/footer-primary.mjml" />
    <mj-raw> {% endif %} </mj-raw>
  </mj-body>
</mjml>
